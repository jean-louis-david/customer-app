<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <com.view.MTextView
            android:id="@+id/driverDTxt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Passenger Detail"
            android:textColor="@color/appThemeColor_1"
            android:textSize="@dimen/txt_size_20"
            android:visibility="gone" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appThemeColor_1">


        <ImageView
            android:id="@+id/closeImg"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_close_detail"
            android:tint="@color/appThemeColor_TXT_2" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="100dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:id="@+id/nameTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@id/seperationLine"
                        android:gravity="start"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:text=""
                        android:textAlignment="viewStart"
                        android:textColor="#464646"
                        android:textSize="@dimen/txt_size_20"
                        android:textStyle="bold" />

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="?attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:clickable="false"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="2.0"
                        android:stepSize="1.0" />

                    <!-- <RatingBar
                         android:layout_gravity="center"
                         style="?attr/ratingBarStyleIndicator"
                         android:id="@+id/ratingBar"
                         android:clickable="false"
                         android:isIndicator="true"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:numStars="5"
                         android:stepSize="1.0"
                         android:rating="2.0" />-->


                    <com.view.MTextView
                        android:id="@+id/priceTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@id/seperationLine"
                        android:gravity="start"
                        android:maxLines="1"
                        android:text=" "
                        android:textAlignment="viewStart"
                        android:textColor="@color/appThemeColor_1"
                        android:textSize="@dimen/txt_size_18"
                        android:textStyle="bold" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="5dp"
                        android:paddingBottom="20dp">

                        <com.view.MTextView
                            android:id="@+id/descTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity=""
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/seperationLine"
                            android:gravity="start"
                            android:padding="10dp"
                            android:text="Driver information"
                            android:textAlignment="viewStart"
                            android:textColor="#303030"
                            android:textSize="@dimen/txt_size_16"
                            android:textStyle="normal"
                            android:visibility="visible" />

                    </ScrollView>

                    <LinearLayout
                        android:id="@+id/requestBtnArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="20dp">

                        <include
                            android:id="@+id/btn_type2"
                            layout="@layout/btn_type_2"
                            android:layout_width="200dp"
                            android:layout_height="@dimen/all_btn_height"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="5dp"
                            android:layout_marginBottom="10dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>


        <com.view.SelectableRoundedImageView
            android:id="@+id/driverImgView"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="60dp"
            app:sriv_border_color="@color/appThemeColor_TXT_2"
            app:sriv_border_width="2dip"
            app:sriv_left_bottom_corner_radius="20dip"
            app:sriv_left_top_corner_radius="20dip"
            app:sriv_oval="true"
            app:sriv_right_bottom_corner_radius="20dip"
            app:sriv_right_top_corner_radius="20dip" />


    </RelativeLayout>


</LinearLayout>
